@page
@model Task4Web.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

<h2>Удалить проект</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название проекта
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt>
            Премия
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Premium)
        </dd>
