@page
@model Task4Web.Pages.Workers.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

<h2>Удалить работника</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Worker</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Имя
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Worker.FirstName)
        </dd>
        <dt>
            Фамилия
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Worker.LastName)
        </dd>
        <dt>
            Отчество
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Worker.Patronymic)
        </dd>
