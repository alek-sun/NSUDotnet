@page
@model Task4Web.Pages.Projects.DetailsModel

@{
    ViewData["Title"] = "Дополнительные сведения";
}

<h2>Дополнительные сведения</h2>

<div>
    <h4>Проект</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Название
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt>
            Премия
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Premium)
        </dd>
        <dt>
            Работники
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Отчество</th>
                </tr>
                @foreach (var item in Model.Project.Enrollments)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Worker.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Worker.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Worker.Patronymic)
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Project.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
